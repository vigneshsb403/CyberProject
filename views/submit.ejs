  let timeout;
  function myfunction_1(){
    document.getElementById("bt-1").disabled=false;
  }
  function myfunction_2(){
    timeout=setTimeout(myfunction_3,10000);
  }
  function myfunction_3(){
    document.getElementById("bt-2").disabled=false;
